<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.login.RegisterActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="154dp"
        android:layout_height="177dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="邮箱："
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon" />

    <TextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="用户名："
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_email" />

    <TextView
        android:id="@+id/user_pwd"
        android:text="密码："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_username"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/user_school"
        android:text="所在大学："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_pwd"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/user_studentId"
        android:text="学号："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_school"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/user_grade"
        android:text="年级："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_studentId"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/user_major"
        android:text="专业："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_grade"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/text_useremail"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="请输入邮箱"
        android:layout_width="0dp"
        android:paddingTop="0dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/user_school"
        app:layout_constraintStart_toEndOf="@+id/user_school"
        app:layout_constraintTop_toTopOf="@id/user_email" />

    <EditText
        android:id="@+id/text_username"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="请输入姓名"
        android:layout_width="0dp"
        android:paddingTop="0dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/user_school"
        app:layout_constraintStart_toEndOf="@+id/user_school"
        app:layout_constraintTop_toTopOf="@id/user_username" />

    <EditText
        android:id="@+id/text_userpwd"
        android:hint="请输入密码"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_pwd"
        app:layout_constraintLeft_toRightOf="@id/user_school"
        app:layout_constraintStart_toEndOf="@+id/user_school"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_userschool"
        android:hint="请输入所在学校"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_school"
        app:layout_constraintLeft_toRightOf="@id/user_school"
        app:layout_constraintStart_toEndOf="@+id/user_school"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_userStudentId"
        android:hint="请输入学号"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_studentId"
        app:layout_constraintLeft_toRightOf="@id/user_school"
        app:layout_constraintStart_toEndOf="@+id/user_school"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_usergarde"
        android:hint="请输入年级"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_grade"
        app:layout_constraintLeft_toRightOf="@id/user_school"
        app:layout_constraintStart_toEndOf="@+id/user_school"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_usermajor"
        android:hint="请输入专业"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_major"
        app:layout_constraintLeft_toRightOf="@id/user_school"
        app:layout_constraintStart_toEndOf="@+id/user_school"
        android:layout_marginRight="20dp" />

    <Button
        android:id="@+id/button_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="上传照片"
        app:layout_constraintEnd_toStartOf="@+id/button_register"
        app:layout_constraintTop_toBottomOf="@+id/text_usermajor" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_usermajor" />

</android.support.constraint.ConstraintLayout>